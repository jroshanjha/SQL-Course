use sql_course;


-- Group by ( count, sum )
show tables;

select * from orders;

select count(*) from orders;  -- with null value -- number of rows

select count(customer_id)  from orders; -- without nulll

select (count(*) - count(customer_id) ) as diff from orders 

select * from orders;

